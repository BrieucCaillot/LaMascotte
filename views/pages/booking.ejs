<%
    var thispage = {
        pagename    : 'Réservations',
        pagecss     : 'booking',
        pagejs      : 'scriptbooking'
    }
%>

<html lang="fr">
<head>
    <!--META-->
    <%- include('../tpl/head.ejs', { thispage:thispage }) %>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
    <title><%= thispage.pagename %> - <%= params.sitename %></title>
</head>
<body>
    <!--HEADER-->
    <%- include('../tpl/header.ejs') %>
     
    <!--MAIN-->
    <main>
        <!--BOOK A TABLE-->
        <section>
            <div class="container">
                <div id="headerdesc" class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                    <div class="row">
                        <h1 class="col-12">
                            RÉSERVER UNE TABLE
                        </h1>
                    </div>
                </div>
            </div>
        </section>

        <!--FORM TEXT-->
        <section>
            <div class="container">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
                            <h3 class="title">RÉSERVATION</h3>
                            <h4 class="menudevice">FORMULAIRE</h4>
                            <p>
                                REMPLISSEZ LE FORMULAIRE<br>POUR RÉSERVER
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!--FORM-->
        <section>
            <div class="container">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-3">
                            <div class="row">
                                <div class="col-md-12">
                                    <h3>HORAIRES D'OUVERTURE</h3>
                                    <p>
                                        Ouvert 7/7 Jours
                                        <br>du Lundi au Dimanche
                                        <br>Début de service à partir de 12H jusqu'a 23h30
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-8">
                            <div class="row">
                                <div class="col-md-12">
                                    <form action="/booking" method="POST">
                                        <!-- Col Left-->
                                        <div class="row">
                                            <div class="col-md-3">
                                                <span id="datespan" class="input input--shoko">
                                                    <input class="input__field input__field--shoko" type="text" name="date_booking" id="date_booking">
                                                    <label class="input__label input__label--shoko" for="reservation-date">
                                                        <span class="input__label-content input__label-content--shoko">Date</span>
                                                    </label>
                                                    <svg class="graphic graphic--shoko" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                                                        <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"></path>
                                                        <path d="M0,2.5c0,0,298.666,0,399.333,0C448.336,2.5,513.994,13,597,13c77.327,0,135-10.5,200.999-10.5c95.996,0,402.001,0,402.001,0"></path>
                                                    </svg>
                                                </span>
                                            </div>
                                            <div class="col-md-3">
                                                <span class="input input--shoko">
                                                    <input class="input__field input__field--shoko" type="number" min="0" max="20" name="persons" id="persons">
                                                    <label class="input__label input__label--shoko" for="reservation-date">
                                                        <span class="input__label-content input__label-content--shoko">Personne</span>
                                                    </label>
                                                    <svg class="graphic graphic--shoko" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                                                        <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"></path>
                                                        <path d="M0,2.5c0,0,298.666,0,399.333,0C448.336,2.5,513.994,13,597,13c77.327,0,135-10.5,200.999-10.5c95.996,0,402.001,0,402.001,0"></path>
                                                    </svg>
                                                </span>
                                            </div>
                                            <div class="col-md-3">
                                                <span id="timespan" class="input input--shoko">
                                                    <input class="input__field input__field--shoko" type="text" placeholder="12:00 - 23:00" name="time_booking" id="time_booking">
                                                    <label class="input__label input__label--shoko" for="reservation-date">
                                                        <span class="input__label-content input__label-content--shoko">Heure</span>
                                                    </label>
                                                    <svg class="graphic graphic--shoko" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                                                        <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"></path>
                                                        <path d="M0,2.5c0,0,298.666,0,399.333,0C448.336,2.5,513.994,13,597,13c77.327,0,135-10.5,200.999-10.5c95.996,0,402.001,0,402.001,0"></path>
                                                    </svg>
                                                </span>
                                            </div>
                                            <div class="col-md-3">
                                                <span class="input input--shoko">
                                                    <input class="input__field input__field--shoko" type="text" name="lastname" id="lastname">
                                                    <label class="input__label input__label--shoko" for="reservation-date">
                                                        <span class="input__label-content input__label-content--shoko">Nom</span>
                                                    </label>
                                                    <svg class="graphic graphic--shoko" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                                                        <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"></path>
                                                        <path d="M0,2.5c0,0,298.666,0,399.333,0C448.336,2.5,513.994,13,597,13c77.327,0,135-10.5,200.999-10.5c95.996,0,402.001,0,402.001,0"></path>
                                                    </svg>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <span class="input input--shoko">
                                                    <input class="input__field input__field--shoko" type="tel" name="tel" id="tel">
                                                    <label class="input__label input__label--shoko" for="reservation-date">
                                                        <span class="input__label-content input__label-content--shoko">Téléphone</span>
                                                    </label>
                                                    <svg class="graphic graphic--shoko" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                                                        <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"></path>
                                                        <path d="M0,2.5c0,0,298.666,0,399.333,0C448.336,2.5,513.994,13,597,13c77.327,0,135-10.5,200.999-10.5c95.996,0,402.001,0,402.001,0"></path>
                                                    </svg>
                                                </span>
                                            </div>
                                            <div class="col-md-6">
                                                <span class="input input--shoko">
                                                    <input class="input__field input__field--shoko" type="email" name="email" id="email">
                                                    <label class="input__label input__label--shoko" for="reservation-date">
                                                        <span class="input__label-content input__label-content--shoko">Email</span>
                                                    </label>
                                                    <svg class="graphic graphic--shoko" width="300%" height="100%" viewBox="0 0 1200 60" preserveAspectRatio="none">
                                                        <path d="M0,56.5c0,0,298.666,0,399.333,0C448.336,56.5,513.994,46,597,46c77.327,0,135,10.5,200.999,10.5c95.996,0,402.001,0,402.001,0"></path>
                                                        <path d="M0,2.5c0,0,298.666,0,399.333,0C448.336,2.5,513.994,13,597,13c77.327,0,135-10.5,200.999-10.5c95.996,0,402.001,0,402.001,0"></path>
                                                    </svg>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <textarea class="col-md-12" name="infos" id="infos" placeholder="INFORMATIONS COMPLÉMENTAIRES"></textarea>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button type="submit" name="submit" class="button button--nina" data-text="R É S E R V E R">
                                                <!-- <a href="html/booking.html"> -->
                                                    <span>R</span>
                                                    <span>É</span>
                                                    <span>S</span>
                                                    <span>E</span>
                                                    <span>R</span>
                                                    <span>V</span>
                                                    <span>E</span>
                                                    <span>R</span>    
                                                <!-- </a> -->
                                                </button>
                                            </div>
                                        </div>
                                        <!--<span class="form-info">Please note that we can only hold your reservation for 15 minutes. Sorry.</span>-->
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>  
    </main>

    <!--FOOTER-->
    <%- include('../tpl/footer.ejs') %>

    <!--SCRIPT-->
    <script alt="JQuery Library" src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script type="text/javascript" src="../static/js/script.js"></script>
    <script type="text/javascript" src="../static/js/<%= thispage.pagejs %>.js"></script>
    <script type="text/javascript" src="../static/js/datepicker.js"></script>
</body>
</html>